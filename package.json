{
  "name": "monocraft",
  "publisher": "cdztt",
  "displayName": "MonoCraft",
  "description": "Dark color theme and Chinese to English translator",
  "version": "1.4.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdztt/monocraft-VSCodeColorTheme.git"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "tscw": "tsc --watch",
    "tsc": "tsc",
    "build": "vsce package"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onCommand:editor.action.appendComma",
    "onCommand:editor.action.appendSemicolon"
  ],
  "contributes": {
    "themes": [
      {
        "label": "MonoCraft",
        "uiTheme": "vs-dark",
        "path": "./src/themes/MonoCraft-color-theme.json"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+,",
        "command": "editor.action.appendComma",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "key": "ctrl+;",
        "command": "editor.action.appendSemicolon",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "key": "ctrl+'",
        "command": "tran.sele",
        "when": "editorTextFocus && !editorReadonly"
      }
    ],
    "commands": [
      {
        "command": "tran.all",
        "title": "tranAll"
      },
      {
        "command": "color.red",
        "title": "colorRed"
      },
      {
        "command": "color.green",
        "title": "colorGreen"
      },
      {
        "command": "color.blue",
        "title": "colorBlue"
      },
      {
        "command": "color.slate",
        "title": "colorSlate"
      },
      {
        "command": "color.coral",
        "title": "colorCoral"
      },
      {
        "command": "color.auto.red",
        "title": "colorAutoRed"
      },
      {
        "command": "color.auto.green",
        "title": "colorAutoGreen"
      },
      {
        "command": "color.auto.blue",
        "title": "colorAutoBlue"
      },
      {
        "command": "color.auto.slate",
        "title": "colorAutoSlate"
      },
      {
        "command": "color.auto.coral",
        "title": "colorAutoCoral"
      }
    ]
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "typescript": "^5.1.6"
  }
}